<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_shared_preferences"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="cs4720.cs.virginia.edu.coreskills.SharedPreferencesActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Sally Smith"
        android:ems="10"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/spnameEditText"
        android:textAlignment="center" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:text="sss5s"
        android:ems="10"
        android:layout_below="@+id/spnameEditText"
        android:layout_alignStart="@+id/spnameEditText"
        android:id="@+id/spcompIDEditText"
        android:textAlignment="center" />

    <Button
        android:text="Save to Shared Preferences"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spcompIDEditText"
        android:layout_centerHorizontal="true"
        android:id="@+id/spsaveButton"
        android:onClick="saveToSharedPreferences"/>

    <Button
        android:text="Load from Shared Preferences"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spsaveButton"
        android:layout_centerHorizontal="true"
        android:id="@+id/sploadButton"
        android:onClick="loadFromSharedPreferences"/>

    <TextView
        android:text="Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sploadButton"
        android:layout_centerHorizontal="true"
        android:id="@+id/spnameTextView" />

    <TextView
        android:text="Computing ID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spcompIDTextView"
        android:layout_below="@+id/spnameTextView"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
